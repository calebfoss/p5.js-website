<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <meta name="description" content="p5.js a JS client-side library for creating graphic and interactive experiences, based on the core principles of Processing.">
    <title>{{site.title}}</title>
    <link rel="stylesheet" href="{{assets}}/css/main.css">
    <script type="text/javascript" src="//fast.fonts.net/jsapi/5ace315e-3b19-4568-9e85-5bfcb29004c0.js"></script>
  </head>
  <body>

    {{>i18n}}

    {{> header }}

    {{> body }}

    <script type="text/javascript">
      // Button click handling:
      (function(w,d){
        if (w.location.pathname.indexOf('/es/') === -1) {
          d.getElementById('en-btn').setAttribute('disabled', 'disabled');
        } else {
          d.getElementById('es-btn').setAttribute('disabled', 'disabled');
        }
        var btns = d.getElementById('i18n-btn').getElementsByTagName('button');
        for (var i=0, l=btns.length; i < l; i++) {
          btns[i].addEventListener('click', function(e) {
            var loc = String(w.location.pathname);
            loc = loc.replace('\/es\/', '');
            var id = this.getAttribute('id');
            if (id !== 'en-btn') {
              loc = '/'+ id.substring(0, 2) + loc;
            } else {
              loc = '/' + loc;
            }
            w.location = loc;
          }, false);
        }
      })(window,document);

      // Load libraries:
      (function(w,d,ls){
        var url_parts = w.location.pathname.split('/').filter(function (v) {
          return v !== '';
        });
        var inject = function() {
          var script = d.createElement('script');
          script.setAttribute('src', '/assets/js/main.js');
          script.setAttribute('type', 'text/javascript');
          d.getElementsByTagName('body')[0].appendChild(script);
        };
        if (url_parts.length > 1) {
          inject();
        } else if (url_parts.length == 1) {
          for (var i = 0, l = ls.length; i < l; i++) {
            if (url_parts[0] != ls[i]) {
              inject();
              break;
            }
          }
        }
      })(window,document,['es']);  // <-- Add more languages here.

      // Google Analytics:
      window.addEventListener('load', function() {  // <-- Last but not least.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-53383000-1', 'auto');
        ga('send', 'pageview');
      }, true);
    </script>
  </body>
</html>
