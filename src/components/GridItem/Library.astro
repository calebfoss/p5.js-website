---
import { getLibraryLink } from "@/src/pages/_utils";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  item: CollectionEntry<"libraries">;
}

const { item } = Astro.props;
---

<a href={getLibraryLink(item)}>
  <Image src={item.data.featuredImage} alt={item.data.featuredImageAlt} />
  <div class="text-lg mt-xs">{item.data.name}</div>
  <div class="text-sm">{item.data.description}</div>
</a>
