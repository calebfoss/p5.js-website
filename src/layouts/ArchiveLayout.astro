---
import BaseLayout from "./BaseLayout.astro";
import { makeReferencePageSlug } from "@pages/_utils";
import { removeLocalePrefix } from "@i18n/utils";
import type { ArchiveCollectionEntry } from "@content/types";

interface Props {
  entries: ArchiveCollectionEntry[];
  title: string;
}

const { entries, title } = Astro.props;
---

<BaseLayout title={title}>
  <ul>
    {
      entries.map((entry) => (
        <li>
          <a href={`${removeLocalePrefix(makeReferencePageSlug(entry.id))}`}>
            {removeLocalePrefix(makeReferencePageSlug(entry.id))}
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
