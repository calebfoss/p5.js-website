---
import { nonDefaultSupportedLocales } from "@/const";
import BaseLayout from "@layouts/BaseLayout.astro";
import {
  convertContributorDocIndexSlugIfNeeded,
  getCollectionInLocaleWithFallbacks,
  removeLocalePrefix,
} from "@pages/_utils";

export async function getStaticPaths() {
  const entries = await Promise.all(
    nonDefaultSupportedLocales.map(async (locale) => {
      const localeEntries = await getCollectionInLocaleWithFallbacks(
        "contributor-docs",
        locale
      );

      return localeEntries.map((entry) => {
        const slug = convertContributorDocIndexSlugIfNeeded(
          removeLocalePrefix(entry.slug)
        );
        return {
          params: {
            locale,
            slug,
          },
          props: { entry },
        };
      });
    })
  );

  return entries.flat();
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title="Placeholder title">
  <Content />
</BaseLayout>
