---
import BaseLayout from "@layouts/BaseLayout.astro";
import {
  getCollectionInNonDefaultLocales,
  splitLocaleFromPath,
} from "@pages/_utils";

export const getStaticPaths = async () => {
  const pages = await getCollectionInNonDefaultLocales("text-detail");
  return pages
    .map((page) => {
      const [locale, slug] = splitLocaleFromPath(page.slug);

      // don't generate "index" pages, those are handled by ./index.astro
      if (slug === "/") return null;

      return { params: { locale, slug }, props: { page } };
    })
    .filter((p) => p !== null);
};

const { page } = Astro.props;
const { Content } = await page.render();
---

<BaseLayout title={page.data.title}>
  <Content />
</BaseLayout>
