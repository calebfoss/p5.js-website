---
import { nonDefaultSupportedLocales } from "@/const";
import BaseLayout from "@layouts/BaseLayout.astro";
import {
  getCollectionInLocaleWithFallbacks,
  removeLocalePrefix,
} from "@pages/_utils";

export const getStaticPaths = async () => {
  const pages = await Promise.all(
    nonDefaultSupportedLocales.map(async (locale) => {
      const pages = await getCollectionInLocaleWithFallbacks(
        "text-detail",
        locale
      );
      return pages.map((page) => {
        const slug = removeLocalePrefix(page.slug);

        // don't generate "index" pages, those are handled by ./index.astro
        if (slug === "/") return null;

        return { params: { locale, slug }, props: { page } };
      });
    })
  );
  return pages.flat().filter((p) => p !== null);
};

const { page } = Astro.props;
const { Content } = await page.render();
---

<BaseLayout title={page.data.title}>
  <Content />
</BaseLayout>
